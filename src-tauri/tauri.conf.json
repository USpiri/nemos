{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Nemos",
  "version": "0.1.0",
  "identifier": "com.nemos.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Nemos",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcwMzEyMEVBM0NCNTlCMEMKUldRTW03VTg2aUF4Y040Z3U5YWZLOGFJNkNnY3dNZ2NGSkZGeFFuWHUxUjEvWjZ4MDkxNXcvbEgK",
      "endpoints": [
        "https://github.com/USpiri/nemos/releases/latest/download/latest.json"
      ]
    }
  }
}
