{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Nemos",
  "version": "0.3.1",
  "identifier": "com.nemos.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run vite:dev",
    "beforeBuildCommand": "pnpm run vite:build"
  },
  "app": {
    "windows": [
      {
        "title": "Nemos",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'"],
        "script-src": ["'self'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": [
          "'self'",
          "asset:",
          "https://asset.localhost",
          "data:",
          "blob:"
        ],
        "font-src": ["'self'"],
        "connect-src": ["'self'", "ipc:", "http://ipc.localhost"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ5NEFBMkExRTExMkY2QjQKUldTMDloTGhvYUpLMmY3RGhEbEhGOXVleGNSQ3lqRUlvM1ZIZXVGSy9Vd1Y1cWFLQXlxRUF0cEMK",
      "endpoints": [
        "https://github.com/USpiri/nemos/releases/latest/download/latest.json"
      ]
    }
  }
}
